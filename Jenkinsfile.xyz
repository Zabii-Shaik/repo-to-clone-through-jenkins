pipeline {
    agent any
    //tools {
        //jdk 'jdk-11'
      //  maven 'maven'
    //}
    stages {
        stage('checkout') {
            steps {
                echo 'https://github.com/opstree/spring3hibernate.git'
            }
        }
        stage( 'build' ) {
                    steps {
                        echo 'mvn package'
                    }
                }
        stage('parallel') {
            parallel {
                stage( 'code_stability' ) {
                    steps {
                        echo 'mvn checkstyle:checkstyle'
                    }    
                }
                stage( 'quality_analysis' ) {
                    steps {
                        echo 'mvn pmd:pmd'
                    }
                }
                stage( 'findbugs' ) {
                    steps {
                        echo 'mvn findbugs:findbugs'
                    }
                }
                stage( 'sure' ) {
                    steps {
                        echo 'mvn surefire-report:report'
                    }
                }
                stage( 'coverage_analysis' ) {
                    steps {
                        echo 'mvn cobertura:cobertura'
                    }
                }
            }
        }
        stage('generating_report') {
            steps {
                echo 'generating report'
            }
        }
        stage('publish_artifacts') {
            steps {
                echo 'archiveArtifacts artifacts: 'target/*.war'
            }
        }
        stage('email_notification') {
            steps {
                echo 'email notification'
            }
        }
    }
}
